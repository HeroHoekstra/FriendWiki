@import "../../styl/functions.styl"

.article {
  flex: 1;
  display: flex;
  flex-direction: row-reverse;
  
  .summary-wrapper {
    display: flex;
    flex-direction: column;
    
    margin: 10px;
    padding: 10px;
    width: 325px;
    
    background-color: var(--text-100);
    
    .s-title {
      margin: 0;
      padding: 7px;
      
      background-color: var(--text-300);
      border-radius: 3px;
    }
    
    .summary-image {
      display: flex;
      flex-direction: column;
      justify-content: center;
      
      margin: 10px;
      
      .i-add {
        width: 95%;
        margin: 5px;
        
        text-align: center;
        line-height: 200px;
        border-radius: 3px;
        
        background-color: var(--primary-200);
        cursor: pointer;
      }
      
      .image-alt {
        width: 95%;
        margin: 5px;
        
        background-color: var(--text-200);
        border-radius: 3px;
        
        .i-alt {
          margin: 5px 10px;
        }
        
        button {
          button(95%, auto, var(--primary-400));
          
          transition: background-color 0.5s;
        }
        button:hover {
          background-color: var(--primary-500);
        }
      }
    }
  }
  
  .article-wrapper {
    flex: 1;
  }
  
}