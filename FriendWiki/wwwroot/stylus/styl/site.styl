@import "functions.styl";

body {
  margin: 0;
  padding: 0;
  min-height: 100vh;
  max-height: min-content;
  
  background-color: var(--background-50);
  color: var(--text-950);
}
  

main {
  display: flex;
  
  min-height: 100vh;
  height: max-content;
}

h1, h2, h3, h4, h5 {
  font-family: serif;
}

p {
  font-family: sans-serif;
}
  
.break-line {
  breakLine(100%, 0, var(--accent-300));
}