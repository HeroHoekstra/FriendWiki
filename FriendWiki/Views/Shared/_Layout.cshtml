<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - FriendWiki</title>
    
    <script type="importmap"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    
    <link rel="stylesheet" href="~/css/colors.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/FriendWiki.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"/>
</head>
<body>
@if (ViewData["NoNav"] == null || !(bool)ViewData["NoNav"])
{
    <header>
        <nav>
            <div class="default-nav">
                <a href="/">
                    <img class="icon themed-icon" src="~/img/logo-light.svg" alt="Logo of FriendWiki"/>
                </a>

                <form class="search-form" asp-controller="Article" asp-action="Search" method="get">
                    <div class="search-wrapper">
                        <input class="search-input" type="text" name="query" placeholder="Search articles"/>
                        <button class="material-symbols-rounded search-submit">search</button>
                    </div>
                </form>
            </div>
            @RenderSection("NavComponent", required: false)
        </nav>
    </header>
}

<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<script src="~/js/site.js" asp-append-version="true"></script>
<script>
    $(document).ready(function() {
        themedIcons("@Url.Content("~/img/logo-light.svg")", "@Url.Content("~/img/logo-dark.svg")");
    });
</script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>